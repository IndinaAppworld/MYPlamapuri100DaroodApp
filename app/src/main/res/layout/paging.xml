    <LinearLayout
        android:orientation="vertical"
        android:visibility="visible"
        android:background="@android:color/black"
        android:id="@+id/layout_tuotorial"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/tab_english"
                android:padding="1dp"
                android:background="#ffffff"
                android:layout_width="100dp"
                android:layout_height="wrap_content">

                <com.fonts.CipherNormal
                    android:background="#000000"
                    android:id="@+id/txt_english"
                    android:text="ENGLISH"
                    android:gravity="center"
                    android:padding="10dp"
                    android:textColor="#ffffff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/tab_urdu"
                android:padding="1dp"
                android:background="#ffffff"
                android:layout_width="100dp"
                android:layout_height="wrap_content">

                <com.fonts.CipherNormal
                    android:background="#ffffff"
                    android:gravity="center"
                    android:id="@+id/txt_urdu"
                    android:text="URDU"
                    android:padding="10dp"
                    android:textColor="#000000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </LinearLayout>

            <ImageView
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_close"
                android:id="@+id/imgClose"
                android:layout_width="35dp"
                android:layout_height="35dp" />


        </RelativeLayout>

        <LinearLayout
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:id="@+id/layout_english"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.fonts.CipherNormal
                android:text="HINT"
                android:textSize="@dimen/maintitlefont"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <com.fonts.CipherNormal
                android:layout_marginTop="20dp"
                android:text="1. WE WOULD RECOMMEND TO RECITE THE QURAN KAREEM IN THE LANDSCAPE MODE. YOU MAY ENABLE THE LANDSCAPE MODE FROM THE SETTING OPTION OR FROM THE NOTIFICATION BAR ALSO.\n\n2. NIGHT MODE:- WHILE RECITING THE QURAN KAREEM YOU CAN ALSO ENABLE THE NIGHT MODE BY TAPPING/ CLICKS ON ANYWHERE IN THE SCREEN. THIS WILL OPEN THE OPTION TO TOGGLE AMONG THE NIGHT AND DAY MODE.\n\n3. BOOK MARK:- BOOK MARK THE PAGE NO BY TAPPING/ CLICKS ON THE BOOK MARK ICON AT THE TOP RIGHT OF THE SCREEN. DOUBLE CLICK ON THE SAME WILL ALSO REMOVE THE PAGE FROM YOUR BOOK MARK LIST."
                android:textSize="@dimen/menuitemsize"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />



                   </LinearLayout>

        <LinearLayout
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:id="@+id/layout_urdu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <com.fonts.AlviNastaLiqBold
                android:text="اشارہ"
                android:layout_gravity="right"
                android:textSize="@dimen/hedertextsize_urdu"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <com.fonts.AlviNastaLiqBold
                android:layout_marginTop="0dp"
android:text="\nآڑے فون(لینڈ اسکیپ موڈ) میں قرآن کریم کی تلاوت:- آپ کو قرآن کریم کی تلاوت آڑے فون (لینڈ اسکیپ موڈ) میں کرنے کے لیے اوپر دیے ہوئے آپشن پر کلک کرکے آن کر سکتے ہیں\n\nنائٹ موڈ : قرآن کریم نائٹ موڈ میں پڑھنے ڈبل کلک کرکے پڑھ سکتے ہیں۔\n\n بک مارک: قرآن کریم کی تلاوت کے دوران اسکرین کے اوپر دائیں جانب بک مارک کا آئی کان ہے اس پر ڈبل کلک کرکے اس پر نشان لگا سکتے ہیں۔"
                android:textSize="@dimen/menuitemsize_urdu"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            </ScrollView>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>

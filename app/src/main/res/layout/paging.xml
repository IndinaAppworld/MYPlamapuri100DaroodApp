            <!--/>-->





            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:src="@drawable/icondown"
                android:layout_centerVertical="true"
                android:id="@+id/icondown"
                android:layout_marginRight="8dp"
                />


            <LinearLayout
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.fonts.CipherNormal
                    android:layout_gravity="center_vertical"
                    android:id="@+id/txtDay"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/menuitemsize"
                    android:text="Day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <com.zcw.togglebutton.ToggleButton
                    android:id="@+id/toggle_button"
                    android:layout_width="54dp"
                    android:layout_marginLeft="5dp"
                    android:layout_height="match_parent"
                    app:tbBorderWidth="2dp"
                    app:tbOffBorderColor="#ffffff"
                    app:tbOffColor="#ddd"
                    app:tbOnColor="#302484"
                    app:tbSpotColor="@color/textbrown"></com.zcw.togglebutton.ToggleButton>



                <com.fonts.CipherNormal
                    android:layout_gravity="center_vertical"
                    android:id="@+id/txtNight"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/menuitemsize"
                    android:text="Night"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>


